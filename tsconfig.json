{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "es2020",
    "module": "preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "stripInternal": false,

    "rootDir": "src",
    "outDir": "dist",

    "isolatedDeclarations": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
