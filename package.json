{
  "name": "dexie-typesafe",
  "version": "1.0.0",
  "author": "Tony Hallett",
  "license": "ISC",
  "description": "Typesafe schema building producing typesafe dexie Table, Collection and Where",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "npm run build:tsup && npm run build:types",
    "build:tsup": "tsup",
    "build:types": "tsc --declarationMap false --verbatimModuleSyntax false --outFile types/index.d.ts"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "dependencies": {
    "dexie": "^4.2.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tstyche": "^5.0.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
