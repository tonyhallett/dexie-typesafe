{
  "name": "dexie-typesafe",
  "version": "1.0.0",
  "author": "Tony Hallett",
  "license": "ISC",
  "description": "Typesafe schema building producing typesafe dexie Table, Collection and Where",
  "keywords": [
    "dexie",
    "indexeddb",
    "typescript"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "types",
    "package.json"
  ],
  "scripts": {
    "build": "npm run build:tsup && npm run build:types",
    "build:tsup": "tsup",
    "build:types": "tsc --declarationMap false --verbatimModuleSyntax false --outFile types/index.d.ts",
    "packfordemo": "npm run build && npm pack",
    "test": "npx jest && npx tstyche"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "peerDependencies": {
    "dexie": "^4.2.1",
    "typescript": ">=5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "dexie": "^4.2.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tstyche": "^5.0.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
